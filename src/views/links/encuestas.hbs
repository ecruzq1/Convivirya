<div class="container">
  <form method="post" action="/crud_encuestas">
    <!-- Modal -->
    <div class="modal fade bd-example-modal-lg" id="Encuesta_modal_Add" role="dialog"
      aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              <i class="fas fa-plus-circle"></i> Agregar Encuesta</h5>
          </div>
          <div class="modal-body">
            <div class="form-row">
              <div class="form-gropup col-md-6">
                <label>FECHA INICIO</label>
                <input type="date" class="form-control" name="ENC_FECHA_INICIO" required>
              </div>
              <div class="form-gropup col-md-6">
                <label>FECHA FIN</label>
                <input type="date" class="form-control" name="ENC_FECHA_FIN" required>
              </div>
              <div class="form-gropup col-md-12">
                <label>DESCRIPCIÓN</label>
                <textarea class="form-control" rows="3" id="ENC_DESC" name="ENC_DESC" required></textarea>
              </div>

            </div>
          </div>
          <input type="hidden" class="form-control" name="ENC_ID" value="{{encuesta.ENC_ID}}">
          <div class="modal-footer">
            <button value="btn_ingresarEncuesta" type="submit" name="accion" class="btn btn-success">
              <i class="fas fa-plus-circle"></i> Agregar</button>
            <button data-dismiss="modal" class="btn btn-secondary">
              <i class="fas fa-times-circle"></i> Cerrar</button>
          </div>
        </div>
      </div>
    </div>
  </form>
  <form method="post" action="/crud_encuestas">
    <!-- Modal -->
    <div class="modal fade bd-example-modal-lg" id="Encuesta_modal_Edit" role="dialog"
      aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              <i class="fas fa-plus-circle"></i> Modificar Encuesta</h5>
          </div>
          <div class="modal-body">
            <div class="form-row">
              <div class="form-gropup col-md-6">
                <label>FECHA INICIO</label>
                <input type="date" class="form-control" name="ENC_FECHA_INICIO" value="{{encuesta.ENC_FECHA_INICIO}}"
                  required>
              </div>
              <div class="form-gropup col-md-6">
                <label>FECHA FIN</label>
                <input type="date" class="form-control" name="ENC_FECHA_FIN" value="{{encuesta.ENC_FECHA_FIN}}"
                  required>
              </div>
              <div class="form-gropup col-md-12">
                <label>DESCRIPCIÓN</label>
                <textarea class="form-control" rows="3" id="ENC_DESC" name="ENC_DESC"
                  required>{{encuesta.ENC_DESC}}</textarea>
              </div>

            </div>
          </div>
          <input type="hidden" class="form-control" name="ENC_ID" value="{{encuesta.ENC_ID}}">
          <div class="modal-footer">
            <button value="btn_modificarEncuesta" type="submit" name="accion" class="btn btn-warning">
              <i class="fas fa-edit"></i> Modificar</button>
            <button data-dismiss="modal" class="btn btn-secondary">
              <i class="fas fa-times-circle"></i> Cerrar</button>
          </div>
        </div>
      </div>
    </div>
  </form>

  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-6">
          <h2>
            <i class="fas fa-poll fa-lg"></i> Gestión
            <b>Encuestas </b>
          </h2>
        </div>
        <div class="col-sm-6">
          <a class="btn btn-success" data-toggle="modal" data-target="#Encuesta_modal_Add">
            <i class="fas fa-plus-circle"></i>
            <span>Crear Encuesta</span>
          </a>
        </div>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-hover"></table>
      <table id="myTable" class="table table-hover table-">
        <thead>
          <tr>
            <th>
              <i class="fas fa-calendar-check"></i> Fecha de Inicio</th>
            <th>
              <i class="fas fa-calendar-times"></i> Fecha Finalización</th>
            <th>
              <i class="fas fa-clipboard"></i> Descripción</th>
            <th>
              <i class="fas fa-exclamation"></i> Acción</th>
          </tr>
        </thead>
        {{#each encuestas}}
        <tr>
          <td>{{ENC_FECHA_INICIO}}</td>
          <td>{{ENC_FECHA_FIN}}</td>
          <td>{{ENC_DESC}}</td>
          <form action="/crud_encuestas" method="post">
            <td>
              <center>
                <input type="hidden" value="{{ENC_ID}}" name="ENC_ID">
                <button value="btn_seleccionarEncuesta" type="submit" name="accion" class="btn btn-secondary"
                  title="Editar">
                  <i class="fas fa-edit"></i>
                </button>
                <a class="btn btn-secondary" title="Preguntas" href="/preguntas/{{ENC_ID}}">
                  <i style="color: white" class="fas fa-question"></i>
                </a>
                <button value="btn_eliminarEncuesta" type="submit" name="accion" class="btn btn-secondary"
                  title="Borrar">
                  <i class="fas fa-trash-alt"></i>
                </button>


              </center>
            </td>
          </form>
        </tr>
        {{else}}
        <div class="col-md-4 mx-auto">
          <div class="card card-body text-center">
            <p>No existen Encuestas.</p>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Encuesta_modal_Add">
              Agregar Enceusta
            </button>
          </div>
        </div>
        {{/each}}
      </table>
    </div>
  </div>
</div>

